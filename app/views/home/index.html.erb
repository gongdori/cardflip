<div class="container" style="margin-top:200px; margin-left:800px;">
    <form style="margin-top:40px" action="/home/selection" method="POST">
        
        <div class="input-group" style="margin-bottom:30px; text-align:center;">
          <span class="input-group-addon" id="basic-addon1">이름</span>
          <input type="text" name="user_name" class="form-control" id="name" placeholder="이름을 입력하세요" aria-describedby="basic-addon1" style="width:200px; text-align:center;">
        </div>

          <select id="year" name="select_year" class="form-control" style="width:100px;">
                <option default>Year</option>
                <% 1980.upto(2000) do |y| %>
                  <option><%= y %></option>
                <% end %>
          </select>
        
          <select id="month" name="select_month" class="form-control" style="width:100px;">
                <option default>Month</option>
                <% 1.upto(12) do |y| %>
                  <option><%= y %></option>
                <% end %>
          </select>
          
          <select id="date" name="select_date" class="form-control" style="width:100px;">
                <option default>Date</option>
                <% 1.upto(31) do |y| %>
                  <option><%= y %></option>
                <% end %>
          </select>
          
              
        
      <button type="submit" class="btn btn-default">카드보기</button>
      
        
    </form>
</div>
    